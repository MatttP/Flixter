<br />

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">Follow your curiosity!</h1>
  <hr />

  <% @courses.each do |course| %>
    <h2 class="text-center">
      <%= link_to course.title, course_path(course), {:style=>"color:rgb(15,15,15)"} %>
      <%= image_tag course.image.to_s, class: 'img-fluid' %>
    </h2>
    <br />
    <div class="row">  
      <div class="cordes col-sm-8 col-12 text-center">
        <%= course.description %>
      </div>
      <div class="col-sm-4 col-12 text-center">
        <%= link_to 'More Details...', course_path(course), class: 'btn btn-outline-danger btn-large' %>
      </div>
    </div>
    <br class="clr" />
  <% end %>
</div>

